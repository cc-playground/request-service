{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "dist",
        "removeComments": true,
        "sourceMap": false,
        "target": "es6"
    },
    "include": [
        "./**/*",
        "./@types/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "ui/*"
    ]
}